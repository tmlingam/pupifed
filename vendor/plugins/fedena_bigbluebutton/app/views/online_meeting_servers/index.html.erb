<div id="content-header">
  <%= link_to_function image_tag("/images/backgrounds/Green-Arrow.png",:border => 0), "history.back()" %>
  <h1><%= t('listing_bbb_servers') %></h1>
  <h3><%= t('all') %></h3>
</div>
<div id="inner-tab-menu">
  <ul>
    <li> <%= link_to "#{t('new_server')}", new_online_meeting_server_path %></li>
  </ul>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div id="bbbrails_servers_links">

  </div>
  <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">

    <tr class="tr-head">
      <td class="col-1"><%= OnlineMeetingServer.human_attribute_name(:name) %></td>
      <td class="col-1">
        <%= OnlineMeetingServer.human_attribute_name(:url) %>
      </td>
      <td class="col-1">
        <%= OnlineMeetingServer.human_attribute_name(:salt) %>
      </td>
      <td class="col-1">
        <%= t('access') %>
      </td>
    </tr>
    <tr class="tr-blank"></tr>


    <% @servers.each do |server| %>
      <tr class="tr-read-<%= cycle('odd', 'even') %>">
        <td class="col-1"><%= link_to server.name, online_meeting_server_path(:id=>server) %></td>
        <td class="col-1"> <%= link_to server.url, online_meeting_server_path(:id=>server) %></td>
        <td class="col-1"><%= link_to server.salt, online_meeting_server_path(:id=>server) %></td>
        <td>
          <%= link_to "#{t('edit_text')}", edit_online_meeting_server_path(:id=>server) %>&nbsp;|&nbsp;
          <%= link_to "#{t('destroy')}", online_meeting_server_path(:id=>server), :confirm => "#{t('delete_confirm_msg')}", :method => :delete %>
        </td>
      </tr>

    <% end %>
  </table>

</div>
