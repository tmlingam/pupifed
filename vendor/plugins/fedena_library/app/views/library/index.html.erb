<div id="content-header">
    <%= link_to_function image_tag("/images/backgrounds/Green-Arrow.png",:border => 0), "history.back()" %>
  <h1>Books</h1>
  <h3><%= "#{t('library_management')}"%></h3>
  
</div>


<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div id="box">
    <div class="link-box">
          <a href="/books"><img src="/images/library/Manage-library.png"></a>
    </div>
    <div class="link-box">
          <a href="/library/search_book"><img src="/images/library/Search-Books.png"></a>
    </div>
    <% if permitted_to? :return_book, :book_movement %>
      <div class="link-box">
          <a href="book_movement/return_book"><img src="/images/library/Manage-Book-Returns.png"></a>
    </div>
    <% end %>
    <% if permitted_to? :direct_issue_book, :book_movement %>
      <div class="link-box">
          <a href="/book_movement/direct_issue_book"><img src="/images/library/Issue-Books.png"></a>
    </div>
    <% end %>
    <% if permitted_to? :card_setting, :library %>
    <div class="link-box">
          <a href="/library/card_setting"><img src="/images/library/Library-Settings.png"></a>
    </div>
    <% end %>
    <% if permitted_to? :movement_log, :library %>
    <div class="link-box">
          <a href="/library/movement_log"><img src="/images/library/Movement-log.png"></a>
    </div>
    <% end %>
    <% if permitted_to? :renewal, :book_movement %>
    <div class="link-box">
          <a href="/book_movement/renewal"><img src="/images/library/Book-Renewal.png"></a>
    </div>
    <% end %>
  </div>
</div>