    <% form_for :user, :html =>{:class => 'form-signin'} do |form| %>
        <div class="input-prepend">
          <span class="add-on"><i class="icon-user"></i></span>
          <%= form.text_field :username, :maxlength => 40, :class => 'input-block-level input-login'%>
        </div>

        <div id="password_textbox_bg" class="input-prepend">
          <span class="add-on"><i class="icon-lock"></i></span>
          <%= form.password_field :password,:maxlength => 40, :class => 'input-block-level input-login' %>
        </div>

        <div id="notice-box">
          <% if !flash.empty? %>
            <div id="notice"><%= flash[:notice] %></div>
          <% end %>
        </div>
        <%= submit_tag 'Sign in', :class => 'submit btn btn-large btn-primary btn-block' %>
      </div>
  <% end %>
