<div id="content-header">
    <%= link_to_function image_tag("/images/backgrounds/Green-Arrow.png",:border => 0), "history.back()" %>
  <h1>School Management</h1>
  <h3><%= t('human_resource') %></h3>
</div>


<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div id="box">
    <% if permitted_to? :settings, :employee %>
      <div class="link-box">
          <a href="/employee/settings"><img src="/images/HR/Employee-Settings.png"></a>
      </div>
    <%end%>

    <% if permitted_to? :employee_management, :employee %>
      <div class="link-box">
          <a href="/employee/employee_management"><img src="/images/HR/Manage-Employees.png"></a>
      </div>
    <%end%>

    <% if permitted_to? :employee_attendance, :employee %>
      <div class="link-box">
          <a href="/employee/employee_attendance"><img src="/images/HR/Attendance-Tracker-Emp.png"></a>
      </div>
    <%end%>

    <% if permitted_to? :payslip, :employee %>
      <div class="link-box">
          <a href="/employee/payslip"><img src="/images/HR/Payslip-Creation.png"></a>
      </div>
    <%end%>

    <% if permitted_to? :search, :employee %>
      <div class="link-box">
          <a href="/employee/search"><img src="/images/HR/Search-Employees.png"></a>
      </div>
    <%end%>
    <% if permitted_to? :department_payslip, :employee %>
    <div class="link-box">
          <a href="/employee/department_payslip"><img src="/images/HR/View-payslips.png"></a>
      </div>
    <% end %>
    <% finance = Configuration.available_modules %>
    <% unless finance.include?("Finance") %>
      <% if permitted_to? :payslip_approve, :employee %>
        <div class="link-box">
          <div class="link-heading"><%= link_to "#{t('one_click_aprove_payslip')}", :controller=>"employee", :action=>"payslip_approve" %></div>
          <div class="link-descr"><%= "#{t('aprove_monthly_payslip')}" %> </div>
        </div>
      <%end%>
    <%end%>
  </div>
</div>
